<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCalculator" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MyCalculator.noActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="calcDigital">
        <item name="background">@drawable/calcul_digit_bg</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="calcOperator">
        <item name="android:textSize">26dp</item>
        <item name="background">@drawable/calcul_operat_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>